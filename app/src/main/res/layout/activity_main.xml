<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="345dp"
        android:layout_height="450dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="5dp"
        app:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="5dp">

        <ImageView
            android:id="@+id/bunny"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny2"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:contentDescription="catch"
            app:layout_column="1"
            android:onClick="catchBunny"
            app:layout_row="0"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny3"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny4"
            android:layout_width="115dp"
            android:layout_height="150dp"
            app:layout_column="0"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_row="1"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny5"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny6"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny7"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny8"
            android:layout_width="115dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            android:layout_height="150dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/hare" />

        <ImageView
            android:id="@+id/bunny9"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:onClick="catchBunny"
            android:contentDescription="catch"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/hare" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/scoreNum"
        android:layout_width="357dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="SCORE:"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/sonuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="357dp"
        android:layout_height="71dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreNum" />

</androidx.constraintlayout.widget.ConstraintLayout>